<div class="user_container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'user_input' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class:'user_input'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field user_input">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "user_input" %>
  </div>
<% end %>
  <div class="user_set"> 
    <%= render "devise/shared/links" %>
  </div>
</div>
